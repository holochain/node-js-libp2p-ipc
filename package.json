{
  "name": "node-js-libp2p-ipc",
  "version": "0.0.1",
  "description": "Holochain IPC connector to the javascript (node-js) version of libp2p",
  "main": "lib/index.js",
  "scripts": {
    "docs": "",
    "test": "standard --fix '**/*.js' && npm run docs && nyc ./node_modules/mocha/bin/mocha 'lib/**/*.test.js'",
    "coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.3.0",
    "sinon": "^6.1.4",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "@nodeutils/defaults-deep": "^1.1.0",
    "libp2p": "^0.23.0",
    "libp2p-kad-dht": "^0.10.1",
    "libp2p-secio": "^0.10.0",
    "libp2p-spdy": "^0.12.1",
    "libp2p-tcp": "^0.12.1",
    "node-p2p-ipc": "github:holochain/node-p2p-ipc#299c8596be4e43cbd1cae1da58e9372e22c19d95",
    "pull-stream": "^3.6.8"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
